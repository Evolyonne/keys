              </div>
              <div id="depense-form-date">
                <%= ff.input :date_paiement, label: false, as: :date, order: [:day, :month, :year], input_html: {class: "form-input"} %>
              </div>
            </div>
          <% end %>
    
          <%= f.submit "Enregistrer", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

  </section>


